<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.kinerja.KinerjaFragment">

    <TextView
            android:id="@+id/tv_user_kinerja"
            android:layout_width="wrap_content"
            android:text="Anda Login Sebagai :"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tv_user_fr"
            android:layout_below="@id/tv_user_kinerja"
            android:layout_centerInParent="true"
            android:textSize="25sp"
            android:text="Slamet Pariadi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <Button android:layout_width="match_parent"
            android:id="@+id/btn_logout_kinerja"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="Logout"
            android:backgroundTint="#178383"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tv_user_fr"
            android:layout_height="wrap_content"/>

</RelativeLayout>