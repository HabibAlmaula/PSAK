<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_margin="10dp"
              android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent"
                  android:padding="20dp"
                  android:layout_height="wrap_content">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tv_tgl_donasi"
                android:text="2019-01-07 18:01:7"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_id_donasi"
                android:text="#SLO-09981-09878"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_id_donatur"
                android:text="#KSLO-09989"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


    </LinearLayout>
    <TextView
            android:id="@+id/tv_jumlah_donasi"
            android:text="Rp. 6.000.000"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>